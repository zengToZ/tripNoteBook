<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="trip_recorder_theme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="DayNight" parent="Theme.AppCompat.DayNight" >
        <item name="colorPrimaryDark">@color/Grey_02</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

</resources>
